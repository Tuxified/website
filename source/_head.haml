%meta{ charset: 'utf-8' }

%meta{ name: 'google-site-verification',
       content: 'C0FiWgdONfvZffO-cciP2CZlMkDMCjfaQrcwPgLG_nw' }

%meta{ name: 'viewport', content: 'width=device-width, initial-scale=1.0' }

%link{ rel: 'alternate', href: config[:feed_url], type: 'application/atom+xml',
       title: config[:title] }

%link{ rel: 'canonical', href: defined?(canonical) ?  config[:website_url] + canonical : config[:website_url] }

- if defined?(keywords) && keywords
  %meta{ name: 'keywords', content: keywords.join(', ') }

- if defined?(description) && description
  %meta{ name: 'description', content: description.strip }

%link{ rel: 'icon', href: '/favicon.ico', type: 'image/x-icon' }

= stylesheet_link_tag(:all)
= javascript_include_tag(:all, defer: 'defer')

%title= current_page.data.title || config[:website_title]
