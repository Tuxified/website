!!!
%html{ lang: 'en' }
  %head
    = partial('head',
      locals: { keywords: current_page.data.keywords,
                description: current_page.data.description })
  %body
    = partial('top')

    .page
      .grid
        %section
          %header
            %h1= current_page.data.title

          .news-index
            %table
              %tbody
                - blog.articles.each do |article|
                  %tr
                    %td.news-meta
                      %time{ datetime: article.date.to_time.utc.iso8601 }
                        = article.date.to_time.utc.strftime('%b %d, %Y')
                    %td= link_to(article.title, article)
