!!!
%html{ lang: 'en' }
  %head
    = partial('head',
      locals: { keywords: current_page.data.keywords,
                description: current_page.data.description })
  %body
    = partial('top')

    .jumbotron
      .grid
        .introduction
          %h1
            = data.jumbotron.title

          = markdown(data.jumbotron.body)

          - data.jumbotron.buttons.each do |button|
            %a.button{ class: button['color'], href: button[:url] }
              = button['text']
        .code-examples
          %select{ title: 'Choose a code example to display' }
            - data.examples.each_with_index do |example, index|
              %option{ 'data-example' => example['title'],
              selected: index.zero? ? 'selected' : nil }
                = example['title']

          - data.examples.each_with_index do |example, index|
            .example{ 'data-example' => example['title'],
            class: index.zero? ? 'visible' : nil }
              = markdown(example['code'])

    .highlights
      - data.highlights.each do |row|
        .row{class: row['color']}
          .grid
            - row.items.each do |item|
              %section
                %h2= item['title']
                = markdown(item['text'])

    .grid
      = partial('homepage_sponsors')

    = partial('footer')
